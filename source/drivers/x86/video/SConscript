# -*- Mode: Python -*-

Import('env')

myenv = env.Clone()
myenv.Append(
	CPPPATH = 'x86emu',
	CPPFLAGS = ' -DDEBUG=1',
	CFLAGS = ' -Wno-unused-parameter -Wno-shadow'
)

myenv.AskatuCXXProg('sbin',
	target = 'video',
	source = [Glob('*.cc'), Glob('vesa/*.cc'), Glob('vga/*.cc'), Glob('x86emu/*.c')],
	LIBS = ['vbe', 'gui']
)
